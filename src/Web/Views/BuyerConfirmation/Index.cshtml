@using DMS.Web.Controllers.Services
 @model ApplicantViewModel




@{
    string title = string.IsNullOrWhiteSpace(Model.BuyerConfirmationModel.PagibigNumber) ? "Add BuyerConfirmation" : "Update BuyerConfirmation - " + Model.BuyerConfirmationModel.PagibigNumber;
    ViewData["Title"] = title;
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Applicants" asp-action="ApplicantRequests">Applicant Requests</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
            <h4 class="page-title">@ViewData["Title"]</h4>
        </div>
    </div>
</div>


<div class="card card-outline rounded-4">
    <div class="card-header rounded-4 rounded-bottom bg-transparent border rounded border-theme-warning border-4 border-bottom-0 border-end-0 border-start-0">
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-3 d-flex justify-content-center align-items-center">
                <div class="auth-logo">
                    <div class="logo logo-dark">
                        <span class="logo-lg">
                            <img src="~/images/JuanTahananAssets/Logo/Pag-IBIG.svg" alt="logo" style="height:100px;">
                        </span>
                    </div>

                    <div class="logo logo-light">
                        <span class="logo-lg">
                            <img src="~/images/JuanTahananAssets/Logo/Pag-IBIG.svg" alt="logo" style="height:100px;">
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-6 d-flex justify-content-center align-items-center">
                <h1 class="m-0 d-print-none fw-bold text-dark text-uppercase text-truncate">Buyer Confirmation Form</h1>
            </div>
            <div class="col-3">
                <div class="float-end">
                    <small class="text-secondary text-truncated">HQF-WLF-252</small>
                    <br />
                    <small class="text-secondary text-truncated">(v01,01,2023)</small>
                </div>
            </div>
        </div>
        <form id="bcf_form" class="needs-validation" novalidate method="post" action="/Module/SaveModuleList">


            <div class="row gy-2">
                <div class="col-md-12">
                    <h3 class="header-title pb-2 mb-2 mt-2 border-bottom-dashed"></h3>

                    <div class="col-xxl-12">
                        <h4 class="header-title pb-2 mb-2 border-bottom-dashed">Personal Information</h4>
                    </div>




                    <div class="col-md-8">
                        <div class="position-relative">
                            <label class="form-label fw-normal" asp-for="BuyerConfirmationModel.ProjectProponentName" required></label>
                            <input type="text" class="form-control rounded-3 mb-2" asp-for="BuyerConfirmationModel.ProjectProponentName" required>
                            <span asp-validation-for="BuyerConfirmationModel.ProjectProponentName" class="text-danger"> </span>
                        </div>
                    </div>


                    <div class="col-md-3" col="9">
                        <div class="position-relative">
                            <label asp-for="BuyerConfirmationModel.JuridicalPersonalityId" class="form-label fw-normal" required></label>
                            <select asp-for="BuyerConfirmationModel.JuridicalPersonalityId" class="rounded-4 mb-2" data-value="@Model.BuyerConfirmationModel.JuridicalPersonalityId" required>
                                <option value="">Select Developer ...</option>

                            </select>
                            <span asp-validation-for="BuyerConfirmationModel.JuridicalPersonalityId" class="text-danger"></span>
                        </div>
                    </div>



                    <div class="col-md-3">
                        <div class="position-relative">
                            <label class="form-label fw-normal" asp-for="BuyerConfirmationModel.LastName" required></label>
                            <input type="text" class="form-control rounded-3 mb-2" asp-for="BuyerConfirmationModel.LastName" required>
                            <span asp-validation-for="BuyerConfirmationModel.LastName" class="text-danger"> </span>
                        </div>
                    </div>



                    <div class="col-md-3">
                        <div class="position-relative">
                            <label class="form-label fw-normal" asp-for="BuyerConfirmationModel.FirstName" required></label>
                            <input type="text" class="form-control rounded-3 mb-2" asp-for="BuyerConfirmationModel.FirstName" required>
                            <span asp-validation-for="BuyerConfirmationModel.FirstName" class="text-danger"> </span>
                        </div>
                    </div>



                    <div class="col-md-3">
                        <div class="position-relative">
                            <label class="form-label fw-normal" asp-for="BuyerConfirmationModel.Suffix" required></label>
                            <input type="text" class="form-control rounded-3 mb-2" asp-for="BuyerConfirmationModel.Suffix" required>
                            <span asp-validation-for="BuyerConfirmationModel.Suffix" class="text-danger"> </span>
                        </div>
                    </div>



                    <div class="col-md-3">
                        <div class="position-relative">
                            <label class="form-label fw-normal" asp-for="BuyerConfirmationModel.BirthDate" required></label>
                            <input type="text" class="form-control rounded-3 mb-2   calendarpicker" asp-for="BuyerConfirmationModel.BirthDate" data-value="@Model.BuyerConfirmationModel.BirthDate" required>
                            <span asp-validation-for="BuyerConfirmationModel.BirthDate" class="text-danger"> </span>
                        </div>
                    </div>


                    <div class="col-md-3">
                        <div class="position-relative">
                            <label asp-for="BuyerConfirmationModel.MaritalStatus" class="form-label fw-normal" required></label>
                            <select asp-for="BuyerConfirmationModel.MaritalStatus" class="rounded-4 selectize" data-value="@Model.BuyerConfirmationModel.MaritalStatus" required>
                                <option value="">Select Marital Status ... </option>
                                <option value="Single/Unmarried">Single/Unmarried</option>
                                <option value="Married">Married</option>
                                <option value="Annulled">Annulled</option>
                                <option value="Legally Separated">Legally Separated</option>
                                <option value="Widow/er">Widow/er</option>
                            </select>
                            <span asp-validation-for="BuyerConfirmationModel.MaritalStatus" class="text-danger"></span>
                        </div>
                    </div>




                    <div class="col-md-3">
                        <div class="position-relative">
                            <label class="form-label fw-normal" asp-for="BuyerConfirmationModel.MothersMaidenName" required></label>
                            <input type="text" class="form-control rounded-3 mb-2" asp-for="BuyerConfirmationModel.MothersMaidenName" required>
                            <span asp-validation-for="BuyerConfirmationModel.MothersMaidenName" class="text-danger"> </span>
                        </div>
                    </div>



                    <div class="col-md-3">
                        <div class="position-relative">
                            <label asp-for="BuyerConfirmationModel.OccupationStatus" class="form-label fw-normal" required></label>
                            <select asp-for="BuyerConfirmationModel.OccupationStatus" class="rounded-4 selectize" data-value="@Model.BuyerConfirmationModel.OccupationStatus" required readonly>
                                <option value="">Select Occupation Status ...</option>
                                <option value="Employed">Employed</option>
                                <option value="Self-Employed">Self-Employed</option>
                            </select>
                            <span asp-validation-for="BuyerConfirmationModel.OccupationStatus" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="col-md-3">
                        <div class="position-relative">
                            <label class="form-label fw-normal" asp-for="BuyerConfirmationModel.HomeNumber"></label>
                            <input type="tel" class="form-control rounded-30 " asp-for="BuyerConfirmationModel.HomeNumber">
                            <span asp-validation-for="BuyerConfirmationModel.HomeNumber" class="text-danger"> </span>
                            <span name="BuyerConfirmationModel.HomeNumber.Error" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="position-relative">
                            <label class="form-label fw-normal" asp-for="BuyerConfirmationModel.MobileNumber" required></label>
                            <input type="tel" class="form-control rounded-3  mobileNumInputMask" asp-for="BuyerConfirmationModel.MobileNumber" title="@Html.DescriptionFor(m => m.BuyerConfirmationModel.MobileNumber)" required>
                            <span asp-validation-for="BuyerConfirmationModel.MobileNumber" class="text-danger"> </span>
                            <span name="BuyerConfirmationModel.MobileNumber.Error" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="position-relative">
                            <label class="form-label fw-normal" asp-for="BuyerConfirmationModel.MobileNumber" required></label>
                            <input type="tel" class="form-control rounded-3  mobileNumInputMask" asp-for="BuyerConfirmationModel.MobileNumber" title="@Html.DescriptionFor(m => m.BuyerConfirmationModel.MobileNumber)" required>
                            <span asp-validation-for="BuyerConfirmationModel.MobileNumber" class="text-danger"> </span>
                            <span name="BuyerConfirmationModel.MobileNumber.Error" class="text-danger"></span>
                        </div>
                    </div>



                    <div class="col-md-6">
                        <div class="position-relative">
                            <label class="form-label fw-normal" asp-for="BuyerConfirmationModel.Email" required></label>
                            <input type="email" class="form-control rounded-3 " asp-for="BuyerConfirmationModel.Email" required>
                            <span asp-validation-for="BuyerConfirmationModel.Email" class="text-danger"> </span>
                        </div>
                    </div>





                    <div class="col-xxl-12">
                        <h4 class="header-title pb-2 mb-2 mt-2 border-bottom-dashed">Address Information</h4>
                    </div>



                    <div class="col-md-12">
                        <h3 class="header-title pb-2 mb-2 mt-3 border-bottom-dashed">
                            Present Home Address
                        </h3>
                    </div>


                    <div class="col-md-3">
                        <div class="position-relative">
                            <label class="form-label fw-normal" asp-for="BuyerConfirmationModel.PresentUnitName"></label>
                            <input type="text" class="form-control rounded-3 mb-2" asp-for="BuyerConfirmationModel.PresentUnitName">
                            <span asp-validation-for="BuyerConfirmationModel.PresentUnitName" class="text-danger"> </span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="position-relative">
                            <label class="form-label fw-normal" asp-for="BuyerConfirmationModel.PresentBuildingName"></label>
                            <input type="text" class="form-control rounded-3 mb-2" asp-for="BuyerConfirmationModel.PresentBuildingName">
                            <span asp-validation-for="BuyerConfirmationModel.PresentBuildingName" class="text-danger"> </span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="position-relative">
                            <label class="form-label fw-normal" asp-for="BuyerConfirmationModel.PresentLotName"></label>
                            <input type="text" class="form-control rounded-3 mb-2" asp-for="BuyerConfirmationModel.PresentLotName">
                            <span asp-validation-for="BuyerConfirmationModel.PresentLotName" class="text-danger"> </span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="position-relative">
                            <label class="form-label fw-normal" asp-for="BuyerConfirmationModel.PresentStreetName" required></label>
                            <input type="text" class="form-control rounded-3 mb-2" asp-for="BuyerConfirmationModel.PresentStreetName">
                            <span asp-validation-for="BuyerConfirmationModel.PresentStreetName" class="text-danger"> </span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="position-relative">
                            <label class="form-label fw-normal" asp-for="BuyerConfirmationModel.PresentSubdivisionName"></label>
                            <input type="text" class="form-control rounded-3 mb-2" asp-for="BuyerConfirmationModel.PresentSubdivisionName">
                            <span asp-validation-for="BuyerConfirmationModel.PresentSubdivisionName" class="text-danger"> </span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="position-relative">
                            <label class="form-label fw-normal" asp-for="BuyerConfirmationModel.PresentBaranggayName" required></label>
                            <input type="text" class="form-control rounded-3 mb-2" asp-for="BuyerConfirmationModel.PresentBaranggayName" required>
                            <span asp-validation-for="BuyerConfirmationModel.PresentBaranggayName" class="text-danger"> </span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="position-relative">
                            <label class="form-label fw-normal" asp-for="BuyerConfirmationModel.PresentMunicipalityName" required></label>
                            <input type="text" class="form-control rounded-3 mb-2" asp-for="BuyerConfirmationModel.PresentMunicipalityName" required>
                            <span asp-validation-for="BuyerConfirmationModel.PresentMunicipalityName" class="text-danger"> </span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="position-relative">
                            <label class="form-label fw-normal" asp-for="BuyerConfirmationModel.PresentProvinceName" required></label>
                            <input type="text" class="form-control rounded-3 mb-2" asp-for="BuyerConfirmationModel.PresentProvinceName" required>
                            <span asp-validation-for="BuyerConfirmationModel.PresentProvinceName" class="text-danger"> </span>
                        </div>
                    </div>
                    <div class="col-md-3" col="9">
                        <div class="position-relative">
                            <label class="form-label fw-normal" asp-for="BuyerConfirmationModel.PresentZipCode" required></label>
                            <input class="form-control rounded-3 mb-2 codeInputMask" asp-for="BuyerConfirmationModel.PresentZipCode" required>
                            <span asp-validation-for="BuyerConfirmationModel.PresentZipCode" class="text-danger"> </span>
                        </div>
                    </div>





                    <div class="col-md-12">
                        <h3 class="header-title pb-2 mb-2 mt-3 border-bottom-dashed">
                            Company Information
                        </h3>
                    </div>





                    <div class="col-md-3">
                        <div class="position-relative">
                            <label class="form-label fw-normal">Company Employer/Business Name</label>
                            <input type="text" class="form-control rounded-3 mb-2" asp-for="BuyerConfirmationModel.PresentUnitName">
                            <span asp-validation-for="BuyerConfirmationModel.PresentUnitName" class="text-danger"> </span>
                        </div>
                    </div>


                    <div class="col-md-3">
                        <div class="position-relative">
                            <label class="form-label fw-normal">Company Employer/Business Name Address</label>
                            <input type="text" class="form-control rounded-3 mb-2" asp-for="BuyerConfirmationModel.PresentUnitName">
                            <span asp-validation-for="BuyerConfirmationModel.PresentUnitName" class="text-danger"> </span>
                        </div>
                    </div>





















                </div>

            </div>

            <a asp-controller="Document" asp-action="Index" class=" btn float-end btn-warning btn-sm ms-1 mt-0 mb-0 waves-effect waves-light">Submit</a>
        </form>
    </div>
</div>

