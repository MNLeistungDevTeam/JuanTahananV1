@model PropertyManagementViewModel
@{

    ViewData["Title"] = "Property Unit";
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
            <h4 class="page-title">@ViewData["Title"]</h4>
        </div>
    </div>
</div>
<!-- end page title -->

<div class="card card-outline rounded-4">
    <div class="card-body rounded-4 rounded-bottom bg-transparent border rounded border-theme-warning border-4 border-bottom-0 border-end-0 border-start-0">
        <div class="row gy-2">
            <div class="col-12">
                <div class="row">
                    <div class="col-md-6 mb-2 align-items-md-center">
                        <button id="btn_add_PropUnitModel" class="btn btn-light btn-sm waves-effect btn_add"><span class="mdi mdi-plus"></span> Add</button>
                        <button id="btn_edit_PropUnitModel" class="btn btn-light btn-sm waves-effect btn_edit" disabled><span class="mdi mdi-square-edit-outline"></span> Edit</button>
                        <button id="btn_delete_PropUnitModel" class="btn btn-light btn-sm waves-effect btn_delete" disabled><span class="mdi mdi-delete-outline"></span> Delete</button>
                        <button class="btn btn-light btn-sm waves-effect btn_refresh" bound="tbl_PropUnit"><span class="mdi mdi-refresh"></span> Refresh</button>
                    </div>
                    <div class="col-md-6 mb-2">
                        <div class="input-group float-end" style="width:250px;">
                            <input bound="tbl_PropUnitModel" type="search" class="form-control form-control-sm" placeholder="Search..." />
                            <span class="input-group-text"><i class="mdi mdi-magnify"></i></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 table-responsive">
                <table class="table table-sm table-bordered nowrap w-100" id="tbl_PropUnit">
                    <thead class="table-light">
                        <tr>
                            <th></th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Date Created</th>
                            <th>Date Modified</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Standard modal content -->
<div id="modal-PropUnitModel" data-bs-backdrop="static" data-bs-keyboard="false" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="standard-modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content rounded-4">
            <div class="modal-header modal-header-color p-2 rounded-4 rounded-bottom bg-transparent border rounded border-theme-warning border-4 border-bottom-0 border-end-0 border-start-0">
                <h3 class="text-dark float-start fw-semibold">Property Unit</h3>
            </div>
            <div class="modal-body">
                <form asp-action="SavePropertyUnit" asp-antiforgery="true" method="post" role="form" id="PropUnitModel_form" enctype="multipart/form-data">
                    <input hidden type="text" asp-for="PropUnitModel.Id" class="form-control form-control-sm">




                    <div class="card border border-soft-secondary">
                        <div class="card-header py-1 px-2">
                            <div class="d-flex align-items-center justify-content-between">
                                <h5 class="text-muted"><span class="mdi mdi-image-edit-outline"></span> Unit Image</h5>
                                <button class="btn btn-sm btn-light waves-effect" type="button" id="fileInputTrigger">
                                    <span class="fe-plus"></span> Update Image
                                </button>

                            </div>
                            <div class="card-body border-top">
                                <div class="d-flex justify-content-center">
                                    <img id="imagePreview" src="~/images/JuanTahananAssets/Sample/LayoutSample.png" class="img-thumbnail bg-light" alt="item-image" style="height: 150px;">
                                    <input accept=".png, .jpg, .jpeg" hidden="" type="file" asp-for="PropUnitModel.ProfileImageFile">


                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="position-relative mb-3">
                        <label class="form-label fw-normal" asp-for="PropUnitModel.Name" required></label>
                        <input type="text" class="form-control rounded-3" asp-for="PropUnitModel.Name" placeholder="Name" required>
                        <span asp-validation-for="PropUnitModel.Name" class="invalid-tooltip"> </span>
                    </div>
                    <div class="position-relative mb-3">
                        <label class="form-label fw-normal" asp-for="PropUnitModel.Description" required></label>
                        <input type="text" class="form-control rounded-3" asp-for="PropUnitModel.Description" placeholder="Description" required>
                        <span asp-validation-for="PropUnitModel.Description" class="invalid-tooltip"> </span>
                    </div>

                    <button type="submit" class=" btn float-end btn-primary btn-sm ms-1 mt-0 mb-0 waves-effect waves-light">Save</button>
                    <button type="button" class="btn float-end btn-sm mt-0 mb-0 btn-light waves-effect mb-2" data-bs-dismiss="modal">Close</button>
                </form>

            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
@section Scripts {
    <script src="~/js/validation.bundle.js" asp-append-version="true"> </script>
    <script src="~/js/Setup/PropertyManagement/PropertyUnitScript.js"></script>
}