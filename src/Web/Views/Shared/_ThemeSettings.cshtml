@inject IStringLocalizer<SharedResources> localizer
<div class="offcanvas offcanvas-end settings-offcanvas" tabindex="-1" id="theme-settings-offcanvas">

    <h6 class="fw-semibold px-3 m-0 py-2 font-16 bg-light">
        <span class="d-block py-2">@localizer["Theme Settings"]</span>
    </h6>

    <div class="offcanvas-body">
        <div class="alert alert-warning" role="alert">
            <strong>@localizer["Customize1"] </strong> @localizer["Customize2"]
        </div>

        <h5 class="fw-medium font-14 mt-4 mb-2 pb-1">@localizer["Color Scheme"]</h5>

        <div class="text-center" hidden>
            <div class="btn-group rounded-pill border-1 border-light" role="group">
                <button type="button" class="btn color-item zoom" data-value="#ff002a" style="background-color: #ff002a"><span class="color-value"></span></button>
                <button type="button" class="btn color-item zoom" data-value="#d93651" style="background-color: #d93651"><span class="color-value"></span></button>
                <button type="button" class="btn color-item zoom" data-value="#bd2432" style="background-color: #bd2432"><span class="color-value"></span></button>
                <button type="button" class="btn color-item zoom" data-value="#8d560b" style="background-color: #8d560b"><span class="color-value"></span></button>

            </div>
            <div class="btn-group rounded-pill border-1 border-light" role="group">
                <button type="button" class="btn color-item zoom" data-value="#e2a928" style="background-color: #e2a928"><span class="color-value"></span></button>
                <button type="button" class="btn color-item zoom" data-value="#ff9f1a" style="background-color: #ff9f1a"><span class="color-value"></span></button>
                <button type="button" class="btn color-item zoom" data-value="#f8af44" style="background-color: #f8af44"><span class="color-value"></span></button>
                <button type="button" class="btn color-item zoom" data-value="#ffd500" style="background-color: #ffd500"><span class="color-value"></span></button>
            </div>
            <div class="btn-group rounded-pill border-1 border-light" role="group">
                <button type="button" class="btn color-item zoom" data-value="#2fa360" style="background-color: #2fa360"><span class="color-value"></span></button>
                <button type="button" class="btn color-item zoom" data-value="#47cc8a" style="background-color: #47cc8a"><span class="color-value"></span></button>
                <button type="button" class="btn color-item zoom" data-value="#30bfbf" style="background-color: #30bfbf"><span class="color-value"></span></button>
                <button type="button" class="btn color-item zoom" data-value="#3490dc" style="background-color: #3490dc"><span class="color-value"></span></button>
            </div>
            <div class="btn-group rounded-pill border-1 border-light" role="group">
                <button type="button" class="btn color-item zoom" data-value="#8f7ee6" style="background-color: #8f7ee6"><span class="color-value"></span></button>
                <button type="button" class="btn color-item zoom" data-value="#5242a6" style="background-color: #5242a6"><span class="color-value"></span></button>
                <button type="button" class="btn color-item zoom" data-value="#333576" style="background-color: #333576"><span class="color-value"></span></button>
                <button type="button" class="btn color-item zoom" data-value="#98aab3" style="background-color: #98aab3"><span class="color-value"></span></button>
            </div>
        </div>

        <div class="colorscheme-cardradio">
            @* <input type="color" class="form-control" value="" id="color-select" /> *@
            <input type="text" class="form-control" id="color-select" value="">
        </div>

        <h5 class="fw-medium font-14 mt-4 mb-2 pb-1">@localizer["Mode"]</h5>

        <div class="colorscheme-cardradio">

            <div class="d-flex flex-column gap-2">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" name="data-bs-theme" id="layout-color-light" value="light">
                    <label class="form-check-label" for="layout-color-light">@localizer["Light"]</label>
                </div>

                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" name="data-bs-theme" id="layout-color-dark" value="dark">
                    <label class="form-check-label" for="layout-color-dark">@localizer["Dark"]</label>
                </div>
            </div>
        </div>

        <div id="layout-width">
            <h5 class="fw-medium font-14 mt-4 mb-2 pb-1">@localizer["Layout Mode"]</h5>

            <div class="d-flex flex-column gap-2">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" name="data-layout-mode" id="layout-mode-fluid" value="fluid">
                    <label class="form-check-label" for="layout-mode-fluid">@localizer["Fluid"]</label>
                </div>

                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" name="data-layout-mode" id="layout-mode-boxed" value="boxed">
                    <label class="form-check-label" for="layout-mode-boxed">@localizer["Boxed"]</label>
                </div>

                <div id="layout-detached">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" name="data-layout-mode" id="data-layout-detached" value="detached">
                        <label class="form-check-label" for="data-layout-detached">@localizer["Detached"]</label>
                    </div>
                </div>
            </div>
        </div>

        <h5 class="fw-medium font-14 mt-4 mb-2 pb-1">@localizer["Topbar Color"]</h5>

        <div class="d-flex flex-column gap-2">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" name="data-topbar-color" id="topbar-color-light" value="light">
                <label class="form-check-label" for="topbar-color-light">@localizer["Light"]</label>
            </div>

            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" name="data-topbar-color" id="topbar-color-dark" value="dark">
                <label class="form-check-label" for="topbar-color-dark">@localizer["Dark"]</label>
            </div>

            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" name="data-topbar-color" id="topbar-color-brand" value="brand">
                <label class="form-check-label" for="topbar-color-brand">@localizer["Brand"]</label>
            </div>
        </div>

        <div>
            <h5 class="fw-medium font-14 mt-4 mb-2 pb-1">@localizer["Menu Color"]</h5>

            <div class="d-flex flex-column gap-2">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" name="data-menu-color" id="leftbar-color-light" value="light">
                    <label class="form-check-label" for="leftbar-color-light">@localizer["Light"]</label>
                </div>

                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" name="data-menu-color" id="leftbar-color-dark" value="dark">
                    <label class="form-check-label" for="leftbar-color-dark">@localizer["Dark"]</label>
                </div>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" name="data-menu-color" id="leftbar-color-brand" value="brand">
                    <label class="form-check-label" for="leftbar-color-brand">@localizer["Brand"]</label>
                </div>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" name="data-menu-color" id="leftbar-color-gradient" value="gradient">
                    <label class="form-check-label" for="leftbar-color-gradient">@localizer["Gradient"]</label>
                </div>
            </div>
        </div>

        <div id="layout-position">
            <h5 class="my-3 font-16 fw-bold">@localizer["Layout Position"]</h5>

            <div class="d-flex flex-column gap-2">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" name="data-layout-position" id="layout-position-fixed" value="fixed">
                    <label class="form-check-label" for="layout-position-fixed">@localizer["Fixed"]</label>
                </div>

                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" name="data-layout-position" id="layout-position-scrollable" value="scrollable">
                    <label class="form-check-label" for="layout-position-scrollable">@localizer["Scrollable"]</label>
                </div>
            </div>
        </div>

        <div id="sidebar-size">
            <h5 class="fw-medium font-14 mt-4 mb-2 pb-1">@localizer["Sidebar Size"]</h5>

            <div class="d-flex flex-column gap-2">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" name="data-sidenav-size" id="leftbar-size-default" value="default">
                    <label class="form-check-label" for="leftbar-size-default">@localizer["Default"]</label>
                </div>

                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" name="data-sidenav-size" id="leftbar-size-compact" value="compact">
                    <label class="form-check-label" for="leftbar-size-compact">@localizer["Compact"]</label>
                </div>

                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" name="data-sidenav-size" id="leftbar-size-small" value="condensed">
                    <label class="form-check-label" for="leftbar-size-small">@localizer["Condensed"]</label>
                </div>

                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" name="data-sidenav-size" id="leftbar-size-full" value="full">
                    <label class="form-check-label" for="leftbar-size-full">@localizer["Full Layout"]</label>
                </div>

                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" name="data-sidenav-size" id="leftbar-size-fullscreen" value="fullscreen">
                    <label class="form-check-label" for="leftbar-size-fullscreen">@localizer["Fullscreen Layout"]</label>
                </div>
            </div>
        </div>
    </div>

    <div class="offcanvas-footer border-top px-3 py-2 text-center">
        <div class="d-flex gap-2">
            <button type="button" class="btn btn-light w-100" id="reset-layout">@localizer["Reset"]</button>
        </div>
    </div>
</div>