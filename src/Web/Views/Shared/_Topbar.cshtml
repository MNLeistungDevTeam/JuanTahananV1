@inject IStringLocalizer<SharedResources> localizer

@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment WebHostEnvironment;

@inject IRoleAccessRepository _roleAccessRepo;
@inject IUserRepository _userRepo;
@inject ICompanyRepository _companyRepo;
@inject IBeneficiaryInformationRepository _bnfcRepo;
@{
    int userId = int.Parse(User.Identity.Name);
    int companyId = int.TryParse(HttpContextAccessor.HttpContext.User.Claims.FirstOrDefault(c => c.Type == "Company")?.Value, out int result) ? result : 0;

    var companyInfo = await _companyRepo.GetByIdAsync(companyId);
    var userInfo = await _userRepo.GetUserAsync(userId);
    var beneficiaryData = await _bnfcRepo.GetByPagibigNumberAsync(userInfo.PagibigNumber);
    string userProfile = Url.Content("~/images/user/default.png");

    
    if (userInfo is not null && !string.IsNullOrWhiteSpace(userInfo.ProfilePicture))
        if (System.IO.File.Exists(System.IO.Path.Combine(WebHostEnvironment.WebRootPath, userInfo.ProfilePicture[1..].Replace("/", "\\"))))
            userProfile = Url.Content("~" + userInfo.ProfilePicture);

}




