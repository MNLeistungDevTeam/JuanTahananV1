@{
    @if (!User.Identity.IsAuthenticated)
    {
        Layout = "_NoAuthLayout";
    }
    ViewData["Title"] = "Forbidden 403";
    var lottieLink = "https://unpkg.com/@dotlottie/player-component@latest/dist/dotlottie-player.mjs";
}

<div class="row justify-content-center  mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body p-3">
                <script src="@lottieLink" type="module"></script>

                <dotlottie-player src="https://lottie.host/24a9d6da-74df-4018-b741-0c3138b64dce/4ubZ1H02dV.json" background="transparent" speed="1" style=" height: 55vh;" loop autoplay></dotlottie-player>
                <div class="text-center mt-n5">
                    <h2 class="text-uppercase text-primary mt-5">Access Denied</h2>
                    <p class="text-muted">
                        It looks like you dont have the right permission to access this page. <br />
                        Don't worry... it happens to the best of us. <br />
                        You might want to contact your administrator. <br />
                        Here's a little tip that might help you get back on track.
                    </p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary waves-effect waves-light"> Return to Dashboard</a>
                    <!-- <p class="">Return to <a href="index.html" class="btn btn-primary waves-effect waves-light"><b>Home</b></a></p> -->
                </div>

            </div>
        </div>
    </div>
</div>