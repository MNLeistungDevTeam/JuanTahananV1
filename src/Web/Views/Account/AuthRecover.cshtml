@using Microsoft.AspNetCore.Hosting
@inject IStringLocalizer<SharedResources> localizer
@model LoginViewModel
@{



    Layout = null;


    ViewData["Title"] = "Reset Password";
    var lottieLink = "https://unpkg.com/@dotlottie/player-component@latest/dist/dotlottie-player.mjs";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title> @ViewData["Title"] | @ViewData["MainTitle"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="MNLeistung.de" name="author" />

    <!-- App favicon -->
  
    <link rel="shortcut icon" href="~/favico.png">
    <link rel="stylesheet" href="~/css/datatables.bundle.css" id="app-style" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.thirdparty.bundle.css" asp-append-version="true" />
    <link href="~/lib/CodeFox/css/app.css" rel="stylesheet" type="text/css" id="app-style" asp-append-version="true" />
    <link href="~/css/login.bundle.css" rel="stylesheet" type="text/css" id="app-style" asp-append-version="true" />

 

</head>

<body class="loading authentication-bg bg-light vh-100">
    <input type="hidden" id="txtBaseUrl" value="@(@Url.Content("~"))/" />

    <div class="account-pages vh-100">
        <div class="container authentication-container">
            <div class="card shadow-lg overflow-hidden m-0">


                <div class="row justify-content-center  mt-4">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body p-3">
                                <script src="@lottieLink" type="module"></script>

                                <div class="row justify-content-center">
                                    <div class="col-md-8 col-lg-6 col-xl-4">
                                        <div class="card shadow-none">

                                            <div class="text-center w-75 m-auto">
                                                <div class="auth-logo">
                                                    <a href="index.html" class="logo logo-dark text-center">
                                                        <span class="logo-lg">
                                                            <img src="assets/images/logo-dark.png" alt="" height="22">
                                                        </span>
                                                    </a>

                                                    <a href="index.html" class="logo logo-light text-center">
                                                        <span class="logo-lg">
                                                            <img src="assets/images/logo-light.png" alt="" height="22">
                                                        </span>
                                                    </a>
                                                </div>
                                                <p class="text-muted mb-4 ">Enter your email address and we'll send you an email with instructions to reset your password.</p>
                                            </div>

                                            <form asp-controller="Account" asp-action="RecoverCredentials" method="post" id="frm_request_resetcredentials">

                                                <div class="mb-3">
                                                    <label for="emailaddress" class="form-label" required>Email address</label>
                                                    <input asp-for="RecoveryEmail" class="form-control" type="email" placeholder="Enter your email" required>
                                                    <input asp-for="BaseUrl" class="form-control" type="hidden">
                                                </div>

                                                <div class="text-center d-grid">
                                                    <button class="btn btn-primary" type="submit"> Reset Password </button>
                                                </div>

                                            </form>


                                        </div>
                                        <!-- end card -->

                                        <div class="row mt-3">
                                            <div class="col-12 text-center">
                                                <p class="text-muted">Back to <a asp-action="Login" asp-asp-controller="Account" class="text-dark text-decoration-underline ms-1"><b>Log in</b></a></p>
                                            </div> <!-- end col -->
                                        </div>
                                        <!-- end row -->

                                    </div> <!-- end col -->
                                </div>



                            </div>
                        </div>
                    </div>
                </div>



            </div>
        </div>
    </div>
    <!-- Theme Settings -->
    <partial name="_ThemeSettings" />

    <!-- Thirdparty js -->
    <script src="~/js/site.thirdparty.bundle.js" asp-append-version="true"></script>
    <script src="~/js/datatables.bundle.js" asp-append-version="true"></script>
    <script src="~/js/navChangeColor.js" asp-append-version="true"></script>

    <script src="~/js/validation.bundle.js" asp-append-version="true"></script>
    <script src="~/js/Setup/Account/RequestResetCredentialScript.js" asp-append-version="true"></script>
</body>
</html>





